{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "target": "ES2020",
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    /* modules */
    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,

    /* type checking */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "*.config.ts", "*.config.mjs"],
  "exclude": ["node_modules"]
}
