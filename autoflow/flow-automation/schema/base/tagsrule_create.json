{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "标签规则参数校验",
    "description": "post /api/automation/v1/tags/rule",
    "type": "object",
    "properties": {
        "name": {
            "type":"string",
            "pattern": "^[^/:\\*?\"<>\\|]+$",
            "maxLength": 255
        },
        "rules": {
            "type": "array",
            "items": {
                "type":"object",
                "properties": {
                    "tag_id": {
                        "type":"string"
                    },
                    "rule": {
                        "type":"object",
                        "properties": {
                            "or": {
                                "type": "array",
                                "items": {
                                    "type":"array",
                                    "items": {
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                },
                "required": [
                    "tag_id",
                    "rule"
                ]
            }
        },
        "status": {
            "description": "规则状态，0代表未启用，1代表已启用",
            "type":"integer",
            "enum": [0, 1]
        },
        "description": {
            "description": "详情描述,不允许换行输入,不允许超过300个字符",
            "oneOf": [
                {
                    "type": "string",
                    "maxLength": 300
                },
                {
                    "type": "null"
                }
            ]
        }
    },
    "required": [
        "rules",
        "name",
        "status"
    ],
    "additionalProperties": false
}