{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "安全策略触发器",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "fields": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "minLength": 1
                            },
                            "key": {
                                "type": "string",
                                "minLength": 1
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "string",
                                    "long_string",
                                    "number",
                                    "asPerm",
                                    "asAccessorPerms",
                                    "asFile",
                                    "asFolder",
                                    "asDoc",
                                    "asMetadata",
                                    "asTags",
                                    "asLevel",
                                    "datetime",
                                    "asSpaceQuota",
                                    "asAllowSuffixDoc",
                                    "asUsers",
                                    "asDepartments"
                                ]
                            },
                            "required": {
                                "type": "boolean"
                            }
                        },
                        "required": ["name", "key", "type"]
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["id", "operator", "parameters"],
    "additionalProperties": false
}
