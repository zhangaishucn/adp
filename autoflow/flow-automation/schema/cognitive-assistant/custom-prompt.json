{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Custom Prompt",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "prompt_service_id": {
                    "type": "string"
                },
                "docid": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["id", "operator", "parameters"],
    "additionalProperties": false
}
