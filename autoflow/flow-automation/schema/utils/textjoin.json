{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "文本合并",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "texts": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "string",
                            "pattern": "^{{__.*}}$"
                        }
                    ]
                },
                "separator": {
                    "enum": [
                        "custom",
                        "，",
                        ",",
                        "；",
                        ";",
                        " ",
                        ""
                    ]
                },
                "custom": {
                    "type": "string"
                }
            },
            "required": [
                "texts",
                "separator"
            ],
            "additionalProperties": false
        },
        "settings":{
            "$ref": "../common.json#/definitions/Settings"
        }
    },
    "required": [
        "id",
        "operator",
        "parameters"
    ],
    "additionalProperties": false
}