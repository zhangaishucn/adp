{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "变量定义",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["string", "number", "object", "array"]
                },
                "value": {}
            },
            "required": ["type", "value"],
            "additionalProperties": false
        }
    },
    "required": ["id", "operator", "parameters"],
    "additionalProperties": false
}
