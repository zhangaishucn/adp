{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "添加标签",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "docid": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^gns://([A-Z0-9]{32}/?)+$"
                        },
                        {
                            "type": "string",
                            "pattern": "^{{__.*}}$"
                        }
                    ]
                },
                "tags": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "minItems": 1
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "docid",
                "tags"
            ],
            "additionalProperties": false
        },
        "settings":{
            "$ref": "../common.json#/definitions/Settings"
        }
    },
    "required": [
        "id",
        "operator",
        "parameters"
    ],
    "additionalProperties": false
}