{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "根据文件名获取文件",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "docid": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^gns://([A-Z0-9]{32}/?)+$"
                        },
                        {
                            "type": "string",
                            "pattern": "^{{__.*}}$"
                        }
                    ]
                },
                "name": {
                    "type": "string",
                    "pattern": "^[^/:\\*?\"<>\\|]+$",
                    "maxLength": 255
                }
            },
            "required": ["docid", "name", "ondup"],
            "additionalProperties": false
        },
        "settings":{
            "$ref": "../common.json#/definitions/Settings"
        }
    },
    "required": ["id", "operator", "parameters"],
    "additionalProperties": false
}
