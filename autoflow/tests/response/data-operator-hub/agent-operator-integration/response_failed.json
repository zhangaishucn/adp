{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Common_Failed_Response",
    "type": "array",
    "items": {
        "anyOf": [
            {
                "type": "integer",
                "enum": [400, 401, 403, 404, 409, 500],
                "description": "The response status code."
            },
            {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "detail": {
                        "type": "object"
                    },
                    "solution": {
                        "type": "string"
                    },
                    "link": {
                        "type": "string"
                    }
                }
            }
        ]
    }
}