{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "触发器",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "docid": {
                    "type": "string"
                },
                "docids": {
                    "type":"array",
                    "items": {
                        "type": "string"
                    },
                    "maxItems": 100
                },
                "inherit": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "operator",
        "parameters"
    ],
    "additionalProperties": false
}