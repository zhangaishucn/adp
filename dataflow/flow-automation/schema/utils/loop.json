{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "循环",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "mode": {
                    "enum": [
                        "limit",
                        "array"
                    ]
                },
                "limit": {
                    "oneOf": [
                        {
                            "type": "integer",
                            "minimum": 0
                        },
                        {
                            "type": "string",
                            "pattern": "^{{__.*}}$"
                        }
                    ]
                },
                "array": {
                    "oneOf": [
                        {
                            "type": "array"
                        },
                        {
                            "type": "string",
                            "pattern": "^{{__.*}}$"
                        }
                    ]
                },
                "outputs": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string",
                                "pattern": "^{{__.*}}$"
                            }
                        }
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "operator",
        "parameters"
    ]
}