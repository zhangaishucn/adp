{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "设置权限",
    "description": "",
    "type": "object",
    "properties": {
        "docid": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "^gns://([A-Z0-9]{32}/?)+$"
                },
                {
                    "type": "string",
                    "pattern": "^{{__.*}}$"
                }
            ]
        },
        "config_inherit": {
            "type": "boolean"
        },
        "inherit": {
            "type": "boolean"
        },
        "perminfos": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "accessor": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "user",
                                    "department",
                                    "contactor",
                                    "group"
                                ]
                            },
                            "id": {
                                "type": "string"
                            }
                        }
                    },
                    "perm": {
                        "type": "object",
                        "properties": {
                            "allow": {
                                "type": "string",
                                "enum": [
                                    "display",
                                    "preview",
                                    "cache",
                                    "download",
                                    "create",
                                    "modify",
                                    "delete"
                                ]
                            },
                            "deny": {
                                "type": "string",
                                "enum": [
                                    "display",
                                    "preview",
                                    "cache",
                                    "download",
                                    "create",
                                    "modify",
                                    "delete"
                                ]
                            }
                        }
                    },
                    "endtime": {
                        "type": "string"
                    }
                }
            }
        },
        "settings":{
            "$ref": "../common.json#/definitions/Settings"
        }
    }
}