{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "访问者权限",
    "description": "",
    "type": "object",
    "properties": {
        "inherit": {
            "type": "boolean"
        },
        "perminfos": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "accessor": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "user",
                                    "department",
                                    "contactor",
                                    "group"
                                ]
                            },
                            "id": {
                                "type": "string"
                            }
                        }
                    },
                    "perm": {
                        "type": "object",
                        "properties": {
                            "allow": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "display",
                                        "preview",
                                        "cache",
                                        "download",
                                        "create",
                                        "modify",
                                        "delete"
                                    ]
                                }
                            },
                            "deny": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "display",
                                        "preview",
                                        "cache",
                                        "download",
                                        "create",
                                        "modify",
                                        "delete"
                                    ]
                                }
                            }
                        }
                    },
                    "endtime": {
                        "oneOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                }
            }
        }
    }
}
