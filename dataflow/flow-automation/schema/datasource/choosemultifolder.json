{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "选择多个文件夹或文件",
    "description": "",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "title": {
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "^@.*",
            "maxLength": 255
        },
        "parameters": {
            "type": "object",
            "properties": {
                "docids": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "string",
                                "pattern": "^gns://([A-Z0-9]{32}/?)+$"
                            },
                            {
                                "type": "string",
                                "pattern": "^{{__.*}}$"
                            }
                        ]
                    },
                    "uniqueItems": true,
                    "minItems": 1
                }
            },
            "required": [
                "docids"
            ],
            "additionalProperties": false
        },
        "settings":{
            "$ref": "../common.json#/definitions/Settings"
        }
    },
    "required": [
        "id",
        "operator",
        "parameters"
    ],
    "additionalProperties": false
}