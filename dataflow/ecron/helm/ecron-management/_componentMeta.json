{
    "conponentDefineType": "helm/service",
    "name": "ecron-management",
    "version": "1.0.0",
    "configSchema": {
        "title": "ecron-management",
        "description": "组件配置定义",
        "type": "object",
        "properties": {
            "image": {
                "type": "object",
                "title": "镜像配置",
                "properties": {
                    "registry": {
                        "type": "string",
                        "title": "镜像注册地址"
                    },
                    "service": {
                        "type": "object",
                        "title": "在线服务镜像配置",
                        "properties": {
                            "repository": {
                                "type": "string",
                                "title": "镜像仓库"
                            },
                            "tag": {
                                "type": "string",
                                "title": "镜像版本"
                            },
                            "pullPolicy": {
                                "type": "string",
                                "title": "镜像拉取策略"
                            }
                        }
                    },
                    "rds": {
                        "type": "object",
                        "title": "数据库更新镜像配置",
                        "properties": {
                            "repository": {
                                "type": "string",
                                "title": "镜像仓库"
                            },
                            "tag": {
                                "type": "string",
                                "title": "镜像版本"
                            },
                            "pullPolicy": {
                                "type": "string",
                                "title": "镜像拉取策略"
                            }
                        }
                    }
                }
            },
            "resources": {
                "type": "object",
                "title": "容器资源控制",
                "properties": {
                    "requests": {
                        "type": "object",
                        "description": "容器运行需要的最小资源分配",
                        "properties": {
                            "memory": {
                                "type": "string",
                                "title": "内存"
                            },
                            "cpu": {
                                "type": "string",
                                "title": "cpu"
                            }
                        }
                    },
                    "limits": {
                        "type": "object",
                        "description": "容器运行最大资源限制",
                        "properties": {
                            "memory": {
                                "type": "string",
                                "title": "内存"
                            },
                            "cpu": {
                                "type": "string",
                                "title": "cpu"
                            }
                        }
                    }
                }
            },
            "replicaCount": {
                "type": "number",
                "title": "服务副本数"
            }
        }
    },
    "dependence": [
        {
            "name": "dataflow-dm-pre"
        },
        {
            "name": "rds"
        },
        {
            "name": "mq"
        },
        {
            "name": "hydra"
        }
    ]
}