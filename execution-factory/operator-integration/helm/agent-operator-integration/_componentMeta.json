{
    "componentDefineType": "helm/service",
    "name": "agent-operator-integration",
    "version": "0.2.0",
    "configSchema": {
        "title": "agent-operator-integration",
        "description": "组件配置定义",
        "type": "object",
        "properties": {
            "resources": {
                "type": "object",
                "title": "容器资源控制",
                "properties": {
                    "requests": {
                        "type": "object",
                        "description": "容器运行需要的最小资源分配",
                        "properties": {
                            "memory": {
                                "type": "string",
                                "title": "内存"
                            },
                            "cpu": {
                                "type": "string",
                                "title": "cpu"
                            }
                        }
                    },
                    "limits": {
                        "type": "object",
                        "description": "容器运行最大资源限制",
                        "properties": {
                            "memory": {
                                "type": "string",
                                "title": "内存"
                            },
                            "cpu": {
                                "type": "string",
                                "title": "cpu"
                            }
                        }
                    }
                }
            },
            "replicaCount": {
                "type": "number",
                "title": "服务副本数"
            },
            "service": {
                "type": "object",
                "title": "服务配置",
                "properties": {
                    "operator": {
                        "type": "object",
                        "title": "算子服务配置",
                        "properties": {
                            "importFileSizeLimit": {
                                "type": "number",
                                "title": "导入文件大小限制,单位B"
                            },
                            "importOperatorMaxCount": {
                                "type": "number",
                                "title": "导入算子最大数量"
                            },
                            "descriptionLengthLimit": {
                                "type": "number",
                                "title": "算子描述长度限制，单位字符"
                            }
                        }
                    },
                    "category": {
                        "type": "object",
                        "description": "算子分类配置",
                        "properties": {
                            "initSwitch": {
                                "type": "boolean",
                                "title": "是否初始化算子分类",
                                "description": "初始化算子分类开关，默认true",
                                "default": true
                            }
                        }
                    }
                }
            },
            "observability": {
                "type": "object",
                "title": "可观测配置",
                "properties": {
                    "logEnabled": {
                        "type": "boolean",
                        "title": "是否开启日志"
                    },
                    "traceEnabled": {
                        "type": "boolean",
                        "title": "是否开启链路追踪"
                    },
                    "metricsEnabled": {
                        "type": "boolean",
                        "title": "是否开启指标"
                    }
                }
            }
        }
    },
    "dependence": [
        {
            "name": "dataoperatorhub-dm-pre"
        },
        {
            "name": "rds"
        },
        {
            "name": "hydra"
        },
        {
            "name": "mq"
        },
        {
            "name": "redis"
        },
        {
            "name": "user-management"
        },
        {
            "name": "authorization"
        },
        {
            "name": "business-system-service"
        }
    ]
}